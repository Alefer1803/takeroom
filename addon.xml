<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.takeroom"
       name="TakeRoom"
       version="1.0.1"
       provider-name="Alefer1803">

    <extension point="xbmc.addon.metadata">
        <summary lang="pt">Addon com menu dinâmico carregado do GitHub.</summary>
        <description lang="pt">Este addon carrega seu menu e listas de conteúdo a partir de um JSON hospedado no GitHub.</description>
        <platform>all</platform>
        <license>GPL-3.0</license>
        <!-- Importante: Se você não tiver um arquivo icon.png na pasta, COMENTE ou REMOVA a linha abaixo. -->
        <icon>icon.png</icon>
    </extension>
    
    <!-- Dependências: Garante o uso do Python 3 (necessário para Kodi moderno) -->
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>

    <!-- Ponto de entrada: O Kodi sabe que deve rodar o default.py -->
    <extension point="xbmc.python.script" library="default.py">
        <provides>video</provides>
    </extension>

</addon>
